<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itchunyang.style.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/button_green_selector"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="登   录"
            android:layout_width="200dp"
            android:layout_height="35dp" />

        <Button
            android:background="@drawable/button_white_selector"
            android:textColor="@drawable/button_text_selector"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="深圳"
            android:layout_width="110dp"
            android:layout_height="35dp" />

        <Button
            android:background="@drawable/button_white_selector1"
            android:textColor="@drawable/button_text_selector1"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="香港"
            android:layout_width="110dp"
            android:layout_height="35dp" />

        <EditText
            android:layout_marginLeft="10dp"
            android:drawableBottom="@drawable/drawable_edit"
            android:hint="请输入手机号"
            android:background="@null"
            android:paddingLeft="2dp"
            android:padding="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginLeft="10dp"
            android:textCursorDrawable="@drawable/drawable_edit1"
            android:hint="请输入手机号"
            android:background="@drawable/drawable_edit2"
            android:paddingLeft="2dp"
            android:padding="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
