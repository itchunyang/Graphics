<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itchunyang.graphics.MainActivity">

    <LinearLayout
        android:id="@+id/ll"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:onClick="color"
            android:text="ColorDrawable"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:onClick="shape"
            android:text="ShapeDrawable"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:onClick="levelList"
            android:text="LevelListDrawable"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:onClick="layer"
            android:text="LayerDrawable"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_marginTop="15dp"
        android:layout_below="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:onClick="scale"
            android:text="ScaleDrawable"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:onClick="bitmap"
            android:text="BitmapDrawable"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:onClick="inset"
            android:text="InsetDrawable"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:onClick="rotate"
            android:text="RotateDrawable"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_marginTop="15dp"
        android:layout_below="@id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:onClick="clip"
            android:text="ClipDrawable"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:onClick="transition"
            android:text="TransitionDrawable"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:onClick="animation"
            android:text="AnimationDrawable"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:onClick="sateList"
            android:text="SateListDrawable"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_below="@id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:onClick="gradient"
            android:text="GradientDrawable"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:background="#cccccc"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv"
        android:layout_width="300dp"
        android:layout_height="350dp" />

</RelativeLayout>
